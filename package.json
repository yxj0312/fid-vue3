{
  "name": "fid-vue3",
  "version": "0.0.0",
  "repository": "git@github.com:yxj0312/fid-vue3.git",
  "author": "yxj0312 <yanxiajun@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_ENV=production vite build",
    "check-ts-errors": "yarn tsc --noEmit && yarn vti diagnostics",
    "lint": "eslint \"{src,cypress}/**/*.{js,ts,vue}\"",
    "test:unit": "jest --coverage",
    "test:e2e": "cypress run",
    "test": "yarn check-ts-errors && yarn lint && yarn test:unit && yarn test:e2e"
  },
  "dependencies": {
    "@harlem/core": "^1.0.16",
    "axios": "^0.20.0",
    "deepmerge": "^4.2.2",
    "tailwindcss": "^1.9.6",
    "vue": "^3.0.0-rc.1",
    "vue-axios": "^3.0.1",
    "vue-router": "^4.0.0-beta.13",
    "vuex": "^4.0.0-beta.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/vue": "^5.6.1",
    "@types/dompurify": "^2.0.4",
    "@types/jest": "^26.0.15",
    "@types/marked": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "@vue/compiler-sfc": "^3.0.2",
    "@vue/test-utils": "^2.0.0-beta.10",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "cross-env": "^7.0.2",
    "cypress": "^5.6.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-vue": "^7.0.0-beta.4",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "vite": "^1.0.0-rc.9",
    "vti": "^0.0.18",
    "vue-jest": "^5.0.0-alpha.6"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {}
    },
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,vue}",
      "!<rootDir>/src/config.ts"
    ],
    "moduleFileExtensions": [
      "vue",
      "ts",
      "js",
      "json",
      "node"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-test.ts"
    ]
  }
}
